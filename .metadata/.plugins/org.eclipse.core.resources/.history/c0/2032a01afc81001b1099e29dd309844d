package kr.co.hojeon.subclasses;

import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.Locale;

public class GetSysDateInfo {
	SimpleDateFormat now_date = new SimpleDateFormat("yyyy-MM-dd", Locale.KOREA);
	
	public int getTodayWeeklyNum() {
		String now_date_string = now_date.format(from)
		Calendar calendar = Calendar.getInstance();
	    String[] dates = now_date.split("-");
	    int year = Integer.parseInt(dates[0]);
	    int month = Integer.parseInt(dates[1]);
	    int day = Integer.parseInt(dates[2]);
	    calendar.set(year, month - 1, day);
	    return calendar.get(Calendar.WEEK_OF_YEAR);
	}
}
