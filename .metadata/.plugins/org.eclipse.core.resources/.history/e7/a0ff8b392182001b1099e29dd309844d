package kr.co.hojeon.daos;

import java.util.HashMap;
import java.util.Map;

import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import kr.co.hojeon.beans.BizWeeklySubject;

@Repository
public class BizWeeklyDAO {
	@Autowired
	private SqlSessionTemplate sqlSessionTemplate;
	
	public String getLastWeekPlaner(int year, int week, String userid) {
		HashMap<String, Object> hm = new HashMap<String, Object>();
		
		hm.put("year", year);
		hm.put("week", week);
		hm.put("userid", userid);
		
		return sqlSessionTemplate.selectOne("biz.getLastWeekPlaner", hm);
	}
	
	public BizWeeklySubject getRegistedThisWorkSubject(int year, int week, String userid) {
		HashMap<String, Object> hm = new HashMap<String, Object>();
		
		hm.compute("year", year);
		hm.compute("week", week);
		hm.compute("userid", userid);
		
		return sqlSessionTemplate.select("biz.getRegistedThisWorkSubject", hm);
	}
}
