package kr.co.hojeon.daos;

import java.util.HashMap;
import java.util.List;

import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

@Repository
public class CommSearchDAO {
	@Autowired
	private SqlSessionTemplate sqlSessionTemplate;
	
	public List<HashMap<String, Object>> getRecUser(String all_yn, String bch_code) {
		HashMap<String, Object> input_param = new HashMap<String, Object>();
		
		input_param.put("all_yn", all_yn);
		input_param.put("bcd_code", bch_code);
		
		return sqlSessionTemplate.selectList("comm.getBaseData"); 
	}
}
